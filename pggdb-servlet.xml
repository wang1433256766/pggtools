	    <property name="exceptionMappings">
	        <map>
	            <entry key="java.lang.Exception" value="/error/500" />
	            <entry key="java.lang.Throwable" value="/error/500" />
	        </map>
	    </property>
	    <property name="defaultErrorView" value="/defaultException.jsp" />
    </bean>  -->
</beans>